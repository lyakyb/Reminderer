<Application x:Class="Reminderer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Reminderer"
             xmlns:views="clr-namespace:Reminderer.Views">
    <Application.Resources>
        <DataTemplate DataType="{x:Type views:ScheduleListViewModel}">
            <views:ScheduleListView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type views:AddEditViewModel}">
            <views:AddEditView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type views:ChoiceViewModel}">
            <views:ChoiceView/>
        </DataTemplate>
    </Application.Resources>
</Application>
