<Window x:Class="Reminderer.Windows.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reminderer.Windows"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="NotificationWindow" Height="200" Width="340">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="110*" />
            <RowDefinition Height="50*"  />
            <RowDefinition Height="40*"  /> <!--Reserve-->
        </Grid.RowDefinitions>
        <TextBlock x:Name="DescriptionTextblock" Grid.Row="0" Text="Description Text" />
        <TextBlock x:Name="ExtraDetailTextblock" Grid.Row="1" Text="Extra Detail Text" />
        <Grid>
            
        </Grid>
    </Grid>
</Window>
